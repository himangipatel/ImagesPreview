<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_preview_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvImageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="#40000000"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_reject_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/ic_reject_image"
        tools:ignore="VectorDrawableCompat"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:contentDescription="reject" />

    <ImageView
        android:id="@+id/iv_accept_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/ic_accept_image"
        tools:ignore="VectorDrawableCompat"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:contentDescription="accept" />

</RelativeLayout>